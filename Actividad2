package Actividad2;

public class cuadrado {
	
	//atributos
  private float lado;

  //metodo constructor
  public cuadrado(float lado) {
	  this.lado = lado;
  }
  public float getperimetro() {
	  float perimetro = 4 * (lado);
	  return perimetro;
  }
  public float getarea() {
	  float area = (lado)*(lado);
	  return area;
 }
  public float getdiagonal() {
	  float diagonal = (float) Math.sqrt((Math.pow(lado, 2))+(Math.pow(lado, 2)));
	  
	  return diagonal;
  }
}


package Actividad2;

public class circulo {
	//atributos
	  private float radio;

	  //metodo constructor
	  public circulo(float radio) {
		  this.radio = radio;
	  }
	  public float getcircunferencia() {
		  float circunferencia = (float) ((Math.PI)*2)*(radio);
		  return circunferencia;

	}
	public float getarea() {
		  float area = (float) ((Math.PI)* (Math.pow(radio, 2)));
		  return area;
	 }
	}




